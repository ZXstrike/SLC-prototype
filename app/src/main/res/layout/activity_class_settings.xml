<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ClassSettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:background="@drawable/white_background_5dp"
            android:layout_gravity="top"
            android:elevation="3dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/left_arrow_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/black"
                android:onClick="backToHome"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_marginVertical="10dp"
                android:paddingVertical="2dp"
                android:text="Class Settings"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_black"
                android:textSize="19sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:elevation="5dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/class_picture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="5dp"
                    android:src="@color/Light_Blue"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedCorners5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/class_name_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/class_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>