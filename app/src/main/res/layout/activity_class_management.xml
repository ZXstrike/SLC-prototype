<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ClassManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left_icon"
            app:tint="@color/black"
            android:onClick="backToProfile"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:text="Manage Class"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_gravity="bottom"
        android:src="@drawable/white_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_class_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_marginHorizontal="15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/class_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:paddingVertical="5dp"
            android:layout_marginVertical="15dp"
            android:paddingStart="3dp"
            android:paddingEnd="80dp"
            android:background="@drawable/white_background_rounded_5dp"
            android:elevation="2dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:layout_margin="3dp"
                android:elevation="3dp"
                android:text="Add Class"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                android:textSize="18sp"
                android:onClick="addClass"/>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:paddingVertical="5dp"
                android:elevation="3dp"
                android:text="Create Class"
                android:fontFamily="@font/lato_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:onClick="createClass"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="15dp"
            android:layout_gravity="end"
            android:elevation="5dp"
            android:onClick="showOrHide"
            android:src="@drawable/add_button"
            app:tint="@color/light_blue" />

    </FrameLayout>

</FrameLayout>