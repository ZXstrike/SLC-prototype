<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ClassHomeScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/white_background_5dp"
            android:layout_gravity="top"
            android:elevation="3dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/left_arrow_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/black"
                android:onClick="backToHome"/>

            <TextView
                android:id="@+id/class_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_marginVertical="10dp"
                android:paddingVertical="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_black"
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/post_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/add_button_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/black"
                android:onClick="postSelection"
                android:visibility="visible"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ellipsis_icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/black"
                android:onClick="classSettings"/>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/toggle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal"
            android:elevation="3dp">
            <RadioButton
                android:id="@id/material_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="MATERIAL"
                android:textAlignment="center"
                android:checked="true"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:textColor="@drawable/text_radio_button"
                android:background="@drawable/radio_button_left"
                android:button="@null"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/task_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="TASK"
                android:textAlignment="center"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:textColor="@drawable/text_radio_button"
                android:checked="false"
                android:background="@drawable/radio_button_right"
                android:button="@null"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/material_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="visible"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_task_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/post_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:visibility="gone"
        android:onClick="closeOverlay">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/post_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Post Material"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:onClick="goToPostMaterial"/>
            <TextView
                android:id="@+id/post_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Post Task"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:onClick="goToPostTask"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>